@model TP.Models.Imovel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Imovel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)€
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Cliente"))
    {
        <a asp-controller="Reservas" asp-action="Create" asp-route-id="@Model.ImovelId">Efetuar reserva</a> <span>|</span>
    }
    @if (User.IsInRole("Gestor"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ImovelId">Edit</a><span>|</span>
        <a asp-action="Delete" asp-route-id="@Model.ImovelId">Delete</a><span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
<div>
    @if (ViewBag.listaAval.Count > 0)
    {
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Pontuação
                </th>
                <th>
                    Comentário
                </th>
                <th>
                    Utilizador
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listaAval)
            {

            <tr>
                <td>
                    @item.Pontuacao
                </td>
                <td>
                    @item.Comentario
                </td>
                <td>
                    @item.UserId
                </td>
            </tr>
            }
        </tbody>
    </table>
    }
</div>

